<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build" name="py4j">
    <property environment="env"/>
	<property file="ant.properties"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
	<property name="jar.name" value="py4j${version}.jar"/>
    <path id="junit4.classpath">
        <pathelement location="${junit.path}"/>
        <pathelement location="${hamcrest.path}"/>
    </path>
    <path id="py4j.classpath">
        <pathelement location="${build.dir}"/>
        <path refid="junit4.classpath"/>
    </path>
	<target name="init_dist">
		<mkdir dir="${dist.dir}"/>
		<mkdir dir="py4j-${version}"/>
	</target>
    <target name="init">
        <mkdir dir="${build.dir}"/>
		<mkdir dir="${junit.output.dir}"/>
        <copy includeemptydirs="false" todir="${build.dir}">
            <fileset dir="src">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
		<copy includeemptydirs="false" todir="${build.dir}">
            <fileset dir="examples">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="${build.dir}">
            <fileset dir="test">
                <exclude name="**/*.launch"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
	<target name="clean-doc">
        <delete dir="${javadoc.dir}"/>
    </target>
	<target name="clean-junit">
        <delete dir="junit.output.dir}"/>
    </target>
	<target name="clean-dist">
		<delete dir="${dist.dir}"/>
	</target>
    <target depends="clean,clean-doc,clean-junit,clean-dist" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="${build.dir}" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="py4j.classpath"/>
        </javac>
		<javac debug="true" debuglevel="${debuglevel}" destdir="${build.dir}" source="${source}" target="${target}">
            <src path="examples"/>
            <classpath refid="py4j.classpath"/>
        </javac>
        <javac debug="true" debuglevel="${debuglevel}" destdir="${build.dir}" source="${source}" target="${target}">
            <src path="test"/>
            <classpath refid="py4j.classpath"/>
        </javac>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects"/>
    <target name="py4j-tests">
        <mkdir dir="${junit.output.dir}"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <test name="py4j.BufferGatewayTest" todir="${junit.output.dir}"/>
            <test name="py4j.CallCommandTest" todir="${junit.output.dir}"/>
            <test name="py4j.DefaultJavaGatewayTest" todir="${junit.output.dir}"/>
            <test name="py4j.EchoClientTest" todir="${junit.output.dir}"/>
            <test name="py4j.EchoServerTest" todir="${junit.output.dir}"/>
            <test name="py4j.ListCommandTest" todir="${junit.output.dir}"/>
            <test name="py4j.ProtocolTest" todir="${junit.output.dir}"/>
            <test name="py4j.StringUtilTest" todir="${junit.output.dir}"/>
            <classpath refid="py4j.classpath"/>
        </junit>
    </target>
    <target name="BufferGateway">
        <java classname="py4j.examples.BufferGateway" failonerror="true" fork="yes">
            <classpath refid="py4j.classpath"/>
        </java>
    </target>
    <target name="ExampleApplication">
        <java classname="py4j.examples.ExampleApplication" failonerror="true" fork="yes">
            <classpath refid="py4j.classpath"/>
        </java>
    </target>
    <target name="junitreport">
        <junitreport todir="${junit.output.dir}">
            <fileset dir="${junit.output.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${junit.output.dir}"/>
        </junitreport>
    </target>
	<target name="javadoc">
        <javadoc access="protected" author="true" classpath="" destdir="${javadoc.dir}" doctitle="Py4J" nodeprecated="false" nodeprecatedlist="false" noindex="false" nonavbar="false" notree="false" packagenames="py4j,py4j.examples" source="1.6" sourcepath="src:examples" splitindex="true" use="true" version="true">
            <link href="http://java.sun.com/javase/6/docs/api/"/>
        </javadoc>
    </target>
	<target depends="build" name="jar">
		<jar destfile="${jar.name}" basedir="${build.dir}" excludes="**/*Test.class"/>
	</target>
	<target depends="init_dist,build,javadoc" name="dist">
		<copy todir="${dist.dir}/py4j-${version}/src">
    		<fileset dir="src"/>
  		</copy>
		<copy todir="${dist.dir}/py4j-${version}/test">
    		<fileset dir="test"/>
  		</copy>
		<copy todir="${dist.dir}/py4j-${version}/test">
    		<fileset dir="test"/>
  		</copy>
		<copy todir="${dist.dir}/py4j-${version}/javadoc">
    		<fileset dir="test"/>
  		</copy>
		<copy file="LICENSE" tofile="${dist.dir}/py4j-${version}/LICENSE"/>
		<copy file="README" tofile="${dist.dir}/py4j-${version}/README"/>
		<copy file="TODO" tofile="${dist.dir}/py4j-${version}/TODO"/>
		<copy file="build.xml" tofile="${dist.dir}/py4j-${version}/build.xml"/>
		<copy file="ant.properties" tofile="${dist.dir}/py4j-${version}/ant.properties"/>
		<copy file="${jar.name}" tofile="${dist.dir}/py4j-${version}/${jar.name}"/>
		
		<tar destfile="${dist.dir}/py4j-java-${version}.tar" basedir="${dist.dir}/py4j-${version}/"/>
		<gzip src="py4j-java-${version}.tar" destfile="py4j-java-${version}.tar.gz"/>
	</target>
</project>